// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Produk {
  id          Int      @id @default(autoincrement())
  title       String
  category    String
  location    String
  imageURL    String
  date        DateTime
  price       Int
  description String
  Pemesanan   Pemesanan[]
}

model Pemesanan {
  id               Int      @id @default(autoincrement())
  namaPelanggan    String
  emailPelanggan   String
  teleponPelanggan String
  idProduk         Int
  jumlahTiket      Int
  kodeTiket        String
  Produk           Produk   @relation(fields: [idProduk], references: [id])
}

model Message {
  id      Int      @id @default(autoincrement())
  name    String
  email   String
  phone   String
  message String
}
